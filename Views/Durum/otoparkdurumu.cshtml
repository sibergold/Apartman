@using Apartman.Models.veritabanı
@model List<park_yeri>
@{
    ViewBag.Title = "otoparkdurumu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                <h4>Park Ediceğiniz Lokasyonu Seçiniz</h4>
                <hr>
                <form class="col s12" method="post">
                    <div class="row">
                        <div class="col m5 s12 input-field">
                            <input name="arac_id" type="text" class="validate">
                            <label>Araç ID Giriniz</label>
                        </div>
                        <div class="col m5 s12 input-field">
                            <input name="Parkyeri" type="text" class="validate">
                            <label>Park Yerini Girin</label>
                        </div>
                        <div class="col m2 s12">
                            <button type="submit" style="margin-top:15%;" class="waves-effect waves-light btn">Park Et !</button>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col s12 m12">
                        <div class="row">
                            @foreach (var item1 in Model)
                            {
                                <div class="col s12 m4">
                                    <div style="background-color: #00263A;" class="card-panel">
                                        <span class="white-text">
                                            @item1.arac_id Nolu Araç - @item1.Parkyeri
                                            <a href="/Durum/SIL/@item1.parkyeri_id" style="margin-top:-2%;" class="waves-effect waves-light red darken-3 btn right">Sil</a>
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $('select').material_select();
        });

    </script>

}
@model Apartman.Models.veritabanı.arac_bilgileri
@{
    ViewBag.Title = "AracGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col m12">
            <h4 class="center">Araç Bilgilerini Güncelle</h4>
            <p class="center light">Verilerinizi Güncelleyebilirsiniz.</p>
            <hr />
            @using (Html.BeginForm("AracıGuncelle", "Arac", FormMethod.Post))
            {
                @Html.TextBoxFor(m => m.arac_id, new { @class = "validate hide" })
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(m => m.arac_plaka, new { @class = "validate" })
                        <label for="Tc_Kimlik">Plaka</label>
                    </div>
                    <div class="input-field col s6">
                        @Html.TextBoxFor(m => m.arac_marka, new { @class = "validate" })
                        <label for="soyad">Marka</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(m => m.arac_renk, new { @class = "validate" })
                        <label for="Tc_Kimlik">Renk</label>
                    </div>
                    <div class="input-field col s6">
                        @Html.TextBoxFor(m => m.kisi_id, new { @class = "validate" })
                        <label for="soyad">Arac Sahibi (ID)</label>
                    </div>
                </div>
                <div class="col center m12 s12">
                    <button class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Güncelle</button>
                </div>
            }

        </div>
    </div>
</div>
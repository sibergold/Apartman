@using Apartman.Models.veritabanı
@model List<arac_bilgileri>
@{
    ViewBag.Title = "AracCikis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Section 1 Bitiş-->
<div class="container">
    <div class="row">
        <div class="col m12 s12">
            <h4>Otopark Araç Sil / Güncelle</h4>
            <table class="highlight responsive-table">
                <thead>
                    <tr>
                        <th>Aracın Numarası (ID)</th>
                        <th>Plaka</th>
                        <th>Aracın Markası</th>
                        <th>Aracın Rengi</th>
                        <th>Araç Sahibi (ID)</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var itemm in Model)
                    {
                        <tr>
                            <td>@itemm.arac_id -</td>
                            <td>@itemm.arac_plaka</td>
                            <td>@itemm.arac_marka</td>
                            <td>@itemm.arac_renk</td>
                            <td>@itemm.kisi_id </td>
                            <td><a href="/Arac/AracGetir/@itemm.arac_id" class="waves-effect waves-light btn">Güncelle</a></td>
                            <td><a href="/Arac/SIL/@itemm.arac_id" class="waves-effect waves-light btn red darken-2">Araç Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
